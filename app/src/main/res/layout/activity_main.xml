<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:visibility="visible">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/editText"
            android:layout_marginTop="16dp"
            android:text="@string/text_box"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <Button
            android:layout_width="88dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:text="@string/button" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editText" android:onClick="sendMessage"/>
</android.support.constraint.ConstraintLayout>